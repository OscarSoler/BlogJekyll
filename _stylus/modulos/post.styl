#banner
	width 100%
	height 300px
	overflow hidden
	position absolute
	top 60px	
	display flex
	justify-content center
	left 0
	align-items center
	img 
		margin 0 auto
		display block
		width 100%
		height auto
  	
	h1
		font-size 3.5em
		text-shadow 1px 1px 3px rgba(0, 0, 0, 0.3)
		color #fff
		text-align center
		position absolute
		margin auto
		left 0
		top 120px
		bottom 0
		width 100%
		
		
@media screen and (max-width: 500px)
	#banner	
		top 90px
		
		h1 
			font-size 2em